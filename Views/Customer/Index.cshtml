@model IEnumerable<CustomerImageApp.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}
<h2 class="mb-4">Customers</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add New Customer
</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var c in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@c.Name</h5>
                    <p class="card-text">@c.Images.Count image(s)</p>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-outline-primary btn-sm">View Profile</a>
                </div>
            </div>
        </div>
    }
</div>
