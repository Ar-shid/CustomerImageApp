@model CustomerImageApp.Models.Customer
@{
    ViewData["Title"] = "Add Customer";
}

<h2 class="mb-4 text-primary fw-bold">
    <i class="bi bi-person-plus me-1"></i> Add Customer
</h2>

<form asp-action="Create" method="post" class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold">
                Customer Name
            </label>
            <input asp-for="Name" class="form-control" placeholder="Enter customer name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-1"></i> Save
            </button>
        </div>
    </div>
</form>
