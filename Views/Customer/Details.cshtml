@model CustomerImageApp.Models.Customer
@{
    ViewData["Title"] = "Customer Profile";
}
<h2 class="mb-4">@Model.Name</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card mb-4 shadow-sm p-3">
    <h5>Upload Images (Max 10)</h5>
    <form asp-action="Upload" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="file" name="files" multiple class="form-control" accept="image/*"  required/>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-upload"></i> Upload
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>

@if (Model.Images.Any())
{
    <!-- Main carousel -->
    <div id="customerCarousel" class="carousel slide mb-3 shadow" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                var img = Model.Images.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="data:image/png;base64,@img.Base64Image"
                         class="d-block w-100"
                         style="max-height:400px;object-fit:contain;background-color:#f8f9fa;">
                    <div class="carousel-caption d-md-block" style="position:absolute;bottom:10px;right:10px;">
                        <form asp-action="DeleteImage" asp-route-customerId="@Model.Id" asp-route-imageId="@img.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#customerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" style="filter: invert(1) drop-shadow(0 0 2px #000);"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#customerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" style="filter: invert(1) drop-shadow(0 0 2px #000);"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Thumbnail selector -->
    <div class="d-flex flex-wrap gap-2 justify-content-center">
        @for (int i = 0; i < Model.Images.Count; i++)
        {
            var img = Model.Images.ElementAt(i);
            <img src="data:image/png;base64,@img.Base64Image"
                 width="80" height="80"
                 style="object-fit:cover;cursor:pointer;border:2px solid transparent;border-radius:4px;"
                 onclick="bootstrap.Carousel.getInstance(document.getElementById('customerCarousel')).to(@i)" />
        }
    </div>
}
else
{
    <div class="alert alert-info">No images uploaded yet.</div>
}
